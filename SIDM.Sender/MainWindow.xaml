<Window x:Class="SIDM.Sender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SIDM - Panel de Difusión" Height="400" Width="450"
        WindowStartupLocation="CenterScreen">
	<Grid Background="#F5F5F5">
		<StackPanel Margin="20">
			<TextBlock Text="SISTEMA DE DIFUSIÓN MASIVA" FontSize="20" FontWeight="Bold" Foreground="#004581" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<Label Content="Mensaje a difundir:" FontWeight="SemiBold"/>
			<TextBox Name="txtInput" Height="120" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,15" Padding="5"/>

			<Label Content="Nivel de Prioridad:" FontWeight="SemiBold"/>
			<ComboBox Name="cbNivel" Margin="0,5,0,20" Padding="5">
				<ComboBoxItem Content="Informativo" IsSelected="True"/>
				<ComboBoxItem Content="Urgente"/>
				<ComboBoxItem Content="Alerta de Emergencia"/>
			</ComboBox>

			<Button Content="ENVIAR A TODAS LAS TERMINALES" Height="50" Click="Send_Click"
                    Background="DarkGreen" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
		</StackPanel>
	</Grid>
</Window>