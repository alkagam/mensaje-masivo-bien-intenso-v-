<Window x:Class="SIDM.Receiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SIDM - Receptor" Height="350" Width="550"
        WindowStartupLocation="CenterScreen" Topmost="True"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

	<Border Name="MainBorder" Background="White" CornerRadius="15" BorderBrush="#004581" BorderThickness="2">
		<Grid>
			<StackPanel Margin="30" VerticalAlignment="Center">
				<TextBlock Name="txtTitulo" Text="AVISO INSTITUCIONAL"
                           FontSize="24" FontWeight="Bold" Foreground="Red"
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

				<Separator Background="LightGray" Margin="0,0,0,15"/>

				<TextBlock Name="txtMensaje" Text="Esperando notificación..."
                           FontSize="18" TextWrapping="Wrap" TextAlignment="Center"
                           MinHeight="80" VerticalAlignment="Center"/>

				<Button Content="HE LEÍDO EL MENSAJE"
                        Height="50" Margin="0,20,0,0"
                        Click="BtnOk_Click"
                        Background="#004581" Foreground="White"
                        FontWeight="Bold"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>